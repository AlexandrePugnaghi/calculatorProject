<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.studente.calculatorproject.FormulasActivity">

    <Button
        android:id="@+id/buttonPhysics"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="587dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Physics"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonMath"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="587dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="Math"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonPhysics" />

    <Button
        android:id="@+id/buttonChemistry"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="587dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="Chemistry"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonMath" />



</android.support.constraint.ConstraintLayout>
